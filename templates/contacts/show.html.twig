{% extends 'layout.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block content %}
    <h1 class="h3 mb-2 text-gray-800">Contacts</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Contact List
            <div class="col-6 float-right text-right">
            <div>
                <div class="col-* ml-2 float-right">
                    {{ include('contacts/_delete_form.html.twig') }}
                </div>
                <div class="col-*">
                    <a class="btn btn-dark" href="{{ path('app_contacts_index') }}">back to list</a>
                </div>
            </div>
            
            </div>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td>{{ contact.id }}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.mobileNumber }}</td>
                            <td>{{ contact.email }}</td>
                        </tr>
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    <a class="btn btn-primary" href="{{ path('app_contacts_edit', {'id': contact.id}) }}">edit</a>
{% endblock %}

{% block stylesheets %}
<!-- Custom styles for this page -->
    <link href="{{ asset('sb-admin-2/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
<!-- Page level plugins -->
    <script src="{{ asset('sb-admin-2/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('sb-admin-2/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ asset('sb-admin-2/js/demo/datatables-demo.js') }}"></script>
{% endblock %}